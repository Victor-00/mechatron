{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "*.json", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/login", "dest": "/api/login" },
    { "src": "/questions", "dest": "/api/questions" },
    { "src": "/submit-quiz", "dest": "/api/submit-quiz" },
    { "src": "/", "dest": "/public/login.html" },
    { "src": "/login.html", "dest": "/public/login.html" },
    { "src": "/quiz.html", "dest": "/public/quiz.html" },
    { "src": "/results.html", "dest": "/public/results.html" }
  ],
  "functions": {
    "api/login.js": {
      "maxDuration": 30
    },
    "api/questions.js": {
      "maxDuration": 30
    },
    "api/submit-quiz.js": {
      "maxDuration": 30
    }
  }
}