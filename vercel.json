{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "*.json", "use": "@vercel/static" },
    { "src": "api/login.js", "use": "@vercel/node" },
    { "src": "api/questions.js", "use": "@vercel/node" },
    { "src": "api/submit-quiz.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/login", "dest": "/api/login" },
    { "src": "/api/questions", "dest": "/api/questions" },
    { "src": "/api/submit-quiz", "dest": "/api/submit-quiz" },
    { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
    { "src": "/favicon.png", "dest": "/public/favicon.png" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/login.html", "dest": "/public/login.html" },
    { "src": "/quiz.html", "dest": "/public/quiz.html" },
    { "src": "/results.html", "dest": "/public/results.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "functions": {
    "api/login.js": {
      "maxDuration": 30
    },
    "api/questions.js": {
      "maxDuration": 30
    },
    "api/submit-quiz.js": {
      "maxDuration": 30
    }
  }
}